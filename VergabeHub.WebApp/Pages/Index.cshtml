@page "{handler?}"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<form id="noticeplatform-form" method="GET">
    <div class="container mt-5">
        <p>Select at least one platform from which the notices should be displayed:</p>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="vergabe_nrw" id="vergabeNRW">
            <label class="form-check-label" for="vergabeNRW" id="vergabeNRWLabel">Vergabe NRW</label>
        </div>
        <div class="form-check form-check-inline ms-3">
            <input class="form-check-input" type="checkbox" value="vergabe_bw" id="vergabeBW">
            <label class="form-check-label" for="vergabeBW" id="vergabeBWLabel">Vergabe BW</label>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-3 p-0">
                    <div class="alert alert-danger invalid-feedback" id="checkboxError" role="alert">
                        <i class="fas fa-exclamation-circle"></i>
                        <span class="p-1">You must select at least one platform.</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="getnotices-btn pt-2 pb-2 px-4" id="submitButton">
                <span>Get Notices</span>
            </button>
        </div>
    </div>
</form>

<div class="container-fluid mt-5 table-responsive">
    <table class="table table-bordered border-dark border-2">
        <thead id="table-head">
            <tr>
                <th scope="col" class="col text-center align-middle">Notice Platform</th>
                <th scope="col" class="col text-center align-middle">Date of Publication</th>
                <th scope="col" class="col text-center align-middle">Submission Deadline</th>
                <th scope="col" class="col-3 text-center align-middle">Short Description</th>
                <th scope="col" class="col text-center align-middle">Notice Type</th>
                <th scope="col" class="col-3 text-center align-middle">Contracting Authority</th>
                <th scope="col" class="col-1 text-center align-middle">URL</th>
            </tr>
        </thead>
        <tbody id="table-body">
        </tbody>
    </table>
</div>




